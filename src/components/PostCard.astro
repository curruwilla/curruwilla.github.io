---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'
import Tag from './Tag.astro'

const {
	id,
	data: { title, description, pubDate, heroImage, category },
	readTime,
	slug
} = Astro.props
---

<article class='grid grid-rows-[300px_auto] md:grid-rows-[200px_220px] min-h-full group'>
	<a class='relative overflow-hidden' href={`/post/${slug}/`}>
		<Image
			src={heroImage}
			width={600}
			height={200}
			format='webp'
			class='h-full min-w-full object-cover hover:scale-[101%] transition-all duration-200 rounded-md'
			alt={`img of ${title}`}
		/>
	</a>

	<div class='flex justify-between flex-col gap-4 md:gap-0 py-4 pl-0'>
		<div class='flex flex-col gap-4'>
			<div class='flex items-center justify-between gap-x-1 text-neutral-800'>
				<span><Tag tag={category} /></span>
				<div class='flex flex-col gap-1 items-center justify-center'>
					<FormattedDate date={pubDate} />
				</div>
			</div>

			<div class='flex flex-col gap-2'>
				<a class='text-2xl font-semibold -tracking-wider' href={`/post/${slug}/`}>
					{title}
				</a>
			</div>

			<p
				class='overflow-hidden line-clamp-3 text-neutral-500 dark:text-white mb-5 font-[400] md:pr-[15%]'
			>
				{description}
			</p>
		</div>
	</div>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
